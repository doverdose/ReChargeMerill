html

  head
    include bootstrap
   
  div.topbar
    div.fill
      div.container
        a(href='#').brand #{title}
        ul.nav
          li.active 
            a(href='#') Home
          li  
            a(href='#') About
          li  
            a(href='#') Contact
   
  div.container
    div.content
      div.page-header
        h1 #{title} 
          form
            fieldset
              legend Legend
              label Label name
              span.help-block Example help
              label.checkbox Check me out
              button.btn.btn-primary Submit
      div.row
        div.span10
          h2 Main content
        div.span4
          h3 Secondary content
   
    footer
